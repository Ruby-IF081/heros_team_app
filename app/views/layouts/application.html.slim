doctype html
html
  head
    = display_meta_tags site: 'Heroes Team App', reverse: true
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Montserrat'
    = javascript_include_tag 'application'
  body
    = render 'layouts/header'
    .content
      .app-content.container.center-layout
        .row.alert
          - flash.each do |message_type, message|
            = content_tag(:div, message, class: "alert alert-#{message_type} col-md-3")
        = yield
    = any_login_here if defined?(AnyLogin)
    = render 'layouts/footer'
